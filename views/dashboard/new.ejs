<!DOCTYPE html>
<html lang="en" dir="ltr">
    <% include ../partials/head.ejs %>
    <body>
        <% include ../partials/header.ejs %>
        <div class="container newContainer my-4">
            <h1 class = 'display-4'>New Carcass</h1>
            <form  class = 'my-2 py-3' action="/dashboard" method="post">
                <div class="row justify-content-between">
                    <div class="col">
                        <div class="form-group">
                            <legend>Building:</legend>
                            <select name="building">
                                <option value="none" selected disabled hidden>
                                    Select Your Building
                                </option>
                                <option value="225 Binney">225 Binney</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <legend>Floor:</legend>
                            <select name="floor">
                                <option value="none" selected disabled hidden>
                                    Select a Floor
                                </option>
                                <%for(let i = 1; i <=7; i++){%>
                                    <option value="<%=i%>">Floor <%=i%></option>
                                <%}%>


                            </select>

                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <legend>Room:</legend>
                            <input type="text" name="room">
                        </div>
                        <div class="form-group">
                            <legend>Room Name:</legend>
                            <input type="text" name="rmName" placeholder = "ex: 'Main Conference Room'">
                            <small class="form-text text-muted">*optional</small>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <legend>Description:</legend>
                    <textarea name="description" rows="5" cols="40"></textarea>
                </div>
                <input class="btn btn-lg btn-success" type="submit" value="Feast!">
                <a class="btn btn-lg btn-secondary mx-3" href="/dashboard">Cancel</a>
            </form>

        </div>

    </body>
</html>
