<!DOCTYPE html>
<html lang="en" dir="ltr">
<% include ../partials/head.ejs %>
<body>
    <% include ../partials/header.ejs %>
    <div class="container updateContainer my-4">
        <h1 class = 'display-4'>Update Your Carcass</h1>
        <form  action="/dashboard/<%=carcass.id%>?_method=PUT" method="post">
            <div class="row justify-content-between">
                <div class="col">
                    <div class="form-group">
                        <legend>Building:</legend>
                        <select name="building">
                            <option value="225 Binney">225 Binney</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <legend>Floor:</legend>
                        <select name="floor">
                            <%for(let i = 1; i <=7; i++){
                                if(i == carcass.floor){%>
                                    <option value="<%=i%>" selected>Floor <%=i%></option>
                                    <%}else{%>
                                    <option value="<%=i%>">Floor <%=i%></option>
                                <%}%>
                            <%}%>
                        </select>
                        <option value="<%=carcass.floor%>">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <legend>Room:</legend>
                        <input type="text" name="room" value="<%=carcass.room%>">
                    </div>
                    <div class="form-group">
                        <legend>Room Name:</legend>
                        <input type="text" name="rmName" value="<%=carcass.rmName%>">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <legend>Description:</legend>
                <textarea name="description" rows="5" cols="40"><%=carcass.description%></textarea>
            </div>
            <input class="btn btn-lg btn-success" type="submit" value="Update">
            <a href="/dashboard" class="btn btn-lg btn-secondary mx-3" >Cancel</a>
        </form>
        <form action="/dashboard/<%=carcass.id%>?_method=DELETE" method="post">
            <input class="btn btn-lg btn-dark my-3" type="submit" value="Delete Carcass">
        </form>
    </div>

</body>
</html>
